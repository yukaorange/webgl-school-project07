---

import Layout from '@/layouts/Layout.astro'
import WebGL from '@/components/WebGL.astro';
---

<Layout title="takaoka_webdesigner" addtionalClass='fixed'>
  <WebGL />
  <div class="scroller">
    <div class="scroller-section scroller-section0"></div>
    <div class="scroller-section scroller-section1"></div>
    <div class="scroller-section scroller-section2"></div>
    <div class="scroller-section scroller-section3"></div>
  </div>
</Layout>

<style lang="scss">
  .scroller{
    position: absolute;
    top: 0;
    width: 100%;
    height: 100vh;
    overflow-y: scroll;
    scroll-snap-type: y mandatory;
    scroll-behavior: smooth;
  }
  .scroller-section {
    height: 100vh;
    width: 100%;
  }
</style>
